<div flex="auto" layout="column" ng-if="configurationTab === 'log-settings'"
    ng-init="(!agent || agent.id === '000') ? switchConfigurationSubTab('alerts') : switchConfigurationSubTab('internal')">
    <!-- Headline -->
    <div layout="column" layout-padding>
        <div>
            <span class="font-size-18">Log Settings</span>
        </div>
        <span class="md-subheader">Alerts, archives and internal settings</span>
    </div>
    <!-- End headline -->

    <!-- Global configuration navigation bar -->
    <div ng-if="(!agent || agent.id === '000') && configurationTabsProps" class="md-padding wz-padding-top-0"
        ng-init="buildProps([{id:'alerts', name: 'Alerts'}, {id: 'archives', name: 'Archives'}, {id: 'internal', name: 'Internal'}])">
        <react-component name="Tabs" props="configurationTabsProps" />
    </div>
    <!-- End global configuration navigation bar -->

    <!-- Loading ring -->
    <div class="md-padding md-padding-top-16" ng-if="load">
        <react-component name="EuiProgress" props="{size: 'xs', color: 'primary'}" />
    </div>
</div>