{
  "mappings": {
    "date_detection": false,
    "dynamic": "strict",
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "agent": {
        "properties": {
          "host": {
            "properties": {
              "architecture": {
                "ignore_above": 1024,
                "type": "keyword"
              },
              "ip": {
                "type": "ip"
              }
            }
          },
          "id": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "name": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "version": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "operation": {
        "properties": {
          "name": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "process": {
        "properties": {
          "args": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "command_line": {
            "fields": {
              "text": {
                "type": "text"
              }
            },
            "type": "wildcard"
          },
          "name": {
            "fields": {
              "text": {
                "type": "text"
              }
            },
            "ignore_above": 1024,
            "type": "keyword"
          },
          "parent": {
            "properties": {
              "pid": {
                "type": "long"
              }
            }
          },
          "pid": {
            "type": "long"
          },
          "state": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "stime": {
            "type": "long"
          },
          "utime": {
            "type": "long"
          }
        }
      },
      "wazuh": {
        "properties": {
          "cluster": {
            "properties": {
              "name": {
                "ignore_above": 1024,
                "type": "keyword"
              },
              "node": {
                "ignore_above": 1024,
                "type": "keyword"
              }
            }
          },
          "schema": {
            "properties": {
              "version": {
                "ignore_above": 1024,
                "type": "keyword"
              }
            }
          }
        }
      }
    }
  },
  "settings": {
    "index": {
      "number_of_replicas": "0",
      "number_of_shards": "1",
      "query.default_field": [
        "agent.id",
        "process.name",
        "process.pid",
        "process.command_line"
      ],
      "refresh_interval": "5s"
    }
  }
}
