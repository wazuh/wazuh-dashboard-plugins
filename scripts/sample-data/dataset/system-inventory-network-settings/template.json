{
  "mappings": {
    "date_detection": false,
    "dynamic": "strict",
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "agent": {
        "properties": {
          "host": {
            "properties": {
              "architecture": {
                "ignore_above": 1024,
                "type": "keyword"
              },
              "ip": {
                "type": "ip"
              }
            }
          },
          "id": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "name": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "version": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "event": {
        "properties": {
          "id": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "host": {
        "properties": {
          "ip": {
            "type": "ip"
          }
        }
      },
      "network": {
        "properties": {
          "broadcast": {
            "type": "ip"
          },
          "dhcp": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "metric": {
            "type": "long"
          },
          "netmask": {
            "type": "ip"
          },
          "protocol": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "observer": {
        "properties": {
          "ingress": {
            "properties": {
              "interface": {
                "properties": {
                  "name": {
                    "ignore_above": 1024,
                    "type": "keyword"
                  }
                }
              }
            },
            "type": "object"
          }
        }
      },
      "operation": {
        "properties": {
          "name": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "wazuh": {
        "properties": {
          "cluster": {
            "properties": {
              "name": {
                "ignore_above": 1024,
                "type": "keyword"
              },
              "node": {
                "ignore_above": 1024,
                "type": "keyword"
              }
            }
          },
          "schema": {
            "properties": {
              "version": {
                "ignore_above": 1024,
                "type": "keyword"
              }
            }
          }
        }
      }
    }
  },
  "settings": {
    "index": {
      "number_of_replicas": "0",
      "number_of_shards": "1",
      "query.default_field": [
        "event.id",
        "host.ip",
        "observer.ingress.interface.name"
      ],
      "refresh_interval": "5s"
    }
  }
}
